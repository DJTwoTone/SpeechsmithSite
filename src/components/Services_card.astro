---
const { name, image, description, price, id, key } = Astro.props;

function formatNumber(x) {
  return new Intl.NumberFormat("en-US").format(x);
}

const formattedPrice = formatNumber(price);

function randomShakePoint() {
  return Math.random() * 80 + 1 
}

let shakePoint = randomShakePoint();

---

<div class="service-card" id={id} data-shake-point={shakePoint}>
  <div class="tape" style=`left: calc(${shakePoint}% - 20px);`></div>
  <!-- Scotch tape effect -->
  <h3 class="service-name">{name}</h3>
  <div class="service-body">
    <img src={image} alt={name} class="service-image" />
    <p class="service-description">{description}</p>
  </div>
  <p class="service-price">â‚©{formattedPrice}</p>
</div>


<script>
const cardHoverId = document.getElementsByClassName(`service-card`)[0].id;
const cardHover = document.getElementById(`${cardHoverId}`);
const shakePoint = document.getElementById(`${cardHoverId}`).dataset.shakePoint;

cardHover.onmouseover = () => cardHover.style.transformOrigin = `${shakePoint}% 15%`;
cardHover.onmouseout = () => cardHover.style.transformOrigin = 'top left';


</script>

<style>
  .service-card {
    font-family: "Urbanist", sans-serif;
    background-color: white; /* Paper color */
    color: var(--black);
    border: 8px solid var(--red); /* For the neo-brutalist effect */
    padding: 15px;
    position: relative;
    margin: 50px;
    width: 400px; /* Adjust as needed */
    transform-origin: left top;
    border-radius: 25px;
  }

  .service-name {
    color: var(--yellow); /* Adjust colors as needed */
    font-size: 1.5rem;
    margin-bottom: 25px;
    font-weight: 700;
  }

  .service-body {
    display: flex;
    gap: 30px;
  }

  .service-image {
    width: 120px; /* Adjust as needed */
    height: 120px; /* Keep aspect ratio */
    border-radius: 25px;
    box-shadow: 12px 12px 0 0 var(--orange);
  }

  .description-wrapper {
  }

  .service-description {
    font-family: "Josefin Sans", sans-serif;
    border-radius: 25px;
    box-shadow: 12px -12px 0 0 var(--black);
    flex-grow: 1;
    padding: 10px 10px 10px 15px;
    background-color: var(--beige);
    font-size: 1rem;
  }

  .service-price {
    color: var(--yellow);
    font-weight: bold;
    font-size: 1.5rem;
    text-align: center;
    margin-top: 25px;
  }

  /* Scotch tape effect */
  .tape {
    position: absolute;
    top: -5px;
    left: calc({shakePoint}% - 20px);
    width: 70px;
    height: 10px;
    background-color: #f5f5dc; /* Scotch tape color */
    border: 1px solid #e0e0d1;
    transform: rotate(-30deg);
  }

  /* Subtle wiggle animation on hover */
  .service-card:hover {
    animation: wiggle 0.3s ease-in-out;
    transform-origin: {shakePoint}% 15%;
  }

  @keyframes wiggle {
    0%,
    100% {
      transform: rotate(2deg);
    }
    50% {
      transform: rotate(4deg);
    }
  }

  /* Responsive design */
  @media (min-width: 768px) {
    .service-container {
      display: grid;
      grid-template-columns: repeat(3, 1fr); /* 3 cards in a row */
      gap: 20px;
    }
  }

  @media (max-width: 767px) {
    .service-container {
      display: flex;
      flex-direction: column;
    }
    .service-card {
      width: 100%; /* Full width for mobile */
    }
  }
</style>
