// JavaScript for dynamic behavior (client-side interactivity)
let circleSize = 100; // Starting circle size
let circleColor = 'blue'; // Starting circle color

if (typeof window !== 'undefined') {
  window.addEventListener('scroll', () => {
    const scrolledHeight = window.scrollY;
    
    // Adjust these thresholds based on your page's layout and content length
    if (scrolledHeight < 300) { // Part 1 scrolling range
      circleSize = 100;
      circleColor = 'blue';
    } else if (scrolledHeight >= 300 && scrolledHeight < 600) { // Part 2
      circleSize = 150;
      circleColor = 'orange';
    } else if (scrolledHeight >= 600) { // Part 3
      circleSize = 200;
      circleColor = 'green';
    }

    document.querySelector('.circle').style.width = `${circleSize}px`;
    document.querySelector('.circle').style.height = `${circleSize}px`;
    document.querySelector('.circle').style.backgroundColor = circleColor;
  });
}
