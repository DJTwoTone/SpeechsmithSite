---
// Example placeholder data for blog posts
const blogPosts = [
  {
    id: 1,
    title: "Lorem Ipsum Dolor Sit Amet",
    image: "/placeholder-image1.png",
    excerpt: "Lorem ipsum dolor sit amet, consectetur adipiscing elit...",
    slug: "post-1",
  },
  {
    id: 2,
    title: "Sed Do Eiusmod Tempor",
    image: "/placeholder-image2.png",
    excerpt:
      "Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua...",
    slug: "post-2",
  },
  {
    id: 3,
    title: "Minim Veniam Quis",
    image: "/placeholder-image3.png",
    excerpt:
      "Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris...",
    slug: "post-3",
  },
  {
    id: 4,
    title: "Ullamco Laboris Nisi",
    image: "/placeholder-image4.png",
    excerpt: "Duis aute irure dolor in reprehenderit in voluptate velit...",
    slug: "post-4",
  },
  {
    id: 5,
    title: "Exercitation Ullamco Laboris",
    image: "/placeholder-image5.png",
    excerpt:
      "Exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat...",
    slug: "post-5",
  },
];
---

<div class="blog-section">
  <h2>Our Blog</h2>
  <div class="blog-posts">
    {
      blogPosts.map((post) => (
        <div key={post.id} class="post-preview">
          <h3 class="post-title">{post.title}</h3>
          <div class="post-content hidden">
            <img
              src={post.image}
              alt={`Image for ${post.title}`}
              width="100"
              height="100"
            />
            <div>
              <p>{post.excerpt}</p>
              <a href={`/blog/${post.slug}`} class="read-more-btn">
                Read More
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .blog-section {
    padding: 20px;
    background-color: bisque;
  }

  .post-preview {
    margin-bottom: 20px;
    overflow: hidden; /* Prevents content overflow */
  }

  .post-title {
    cursor: pointer;
    display: block; /* Ensures the title can be centered */
    transition: transform 2s ease; /* Slows down the animation */
    text-align: left; /* Starts aligned to the left */
  }

  .post-preview:hover .post-title {
    transform: translateX(50%); /* Moves to the center on hover */
  }

  .post-content {
    display: none; /* Hide content initially */
    transition: opacity 3s ease; /* Slows down the opacity transition */
    opacity: 0; /* Starts as invisible */
    align-items: center;
    gap: 20px;
  }

  .post-preview:hover .post-content {
    display: flex; /* Show the content on hover */
    opacity: 1; /* Make content fully visible */
    transition: opacity 3s ease;
  }

  .post-content img {
    flex-shrink: 0; /* Prevents the image from shrinking */
  }

  .read-more-btn {
    display: inline-block;
    padding: 10px;
    background-color: #007bff;
    color: #ffffff;
    text-decoration: none;
    transition:
      background-color 0.3s ease,
      transform 0.3s ease;
  }

  .read-more-btn:hover {
    background-color: #0056b3;
    transform: scale(1.05);
  }
</style>
