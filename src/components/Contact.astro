---

<form class="contact-form" @submit="submitForm">
  <div class="contact-form__field">
    <label for="name" class="contact-form__label">Name:</label>
    <input
      type="text"
      id="name"
      name="name"
      class="contact-form__input"
      required
    />
  </div>
  <div class="contact-form__field">
    <label for="email" class="contact-form__label">Email Address:</label>
    <input
      type="email"
      id="email"
      name="email"
      class="contact-form__input"
      required
    />
  </div>
  <div class="contact-form__field">
    <label for="comment" class="contact-form__label">Comment:</label>
    <textarea
      id="comment"
      name="comment"
      class="contact-form__textarea"
      required></textarea>
  </div>
  <!-- Drag and drop file upload component integration would go here -->
  <!-- Integration with Calendly or similar service would go here -->
  <button type="submit" class="contact-form__submit">Send</button>
</form>
<style>
  .contact-form {
    background-color: #eae7dc;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .contact-form__field {
    margin-bottom: 1.5rem;
  }

  .contact-form__label {
    display: block;
    margin-bottom: 0.5rem;
    font-family: "Courier New", Courier, monospace;
    color: #333;
  }

  .contact-form__input,
  .contact-form__textarea {
    width: 100%;
    padding: 0.5rem;
    border-radius: 4px;
    border: 1px solid #d3c095;
  }

  .contact-form__submit {
    background-color: #d3c095;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    cursor: pointer;
    font-family: "Courier New", Courier, monospace;
  }
</style>
