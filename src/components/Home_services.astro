---
import ServicesCard from "./Services_card.astro";

const cards = [
{
    name:"Individual Presentation Coaching",
    image:"services-1.png",
    description:"Tailored one-on-one coaching sessions focused on enhancing your presentation skills, confidence, and clarity",
    price:"150000"
},
{
    name:"Public Speaking Group Workshop",
    image:"services-2.png",
    description:"Interactive workshops for groups aimed at improving public speaking skills, including practice and feedback sessions.",
    price:"300000"
},
{
    name:"Virtual Presentation Skills Training",
    image:"services-3.png",
    description:"Specialized training on how to effectively deliver presentations in a virtual setting, including technology use and audience engagement.",
    price:"120000"
},
{
    name:"Storytelling in Business Communication",
    image:"services-4.png",
    description:"A session focused on integrating storytelling techniques into business presentations to make them more compelling and memorable.",
    price:"200000"
},
{
    name:"Presentation Design and Visual Aid Consultation",
    image:"services-5.png",
    description:"Expert advice on creating impactful presentation slides and visuals that complement and enhance your message.",
    price:"100000"
},
{
    name:"Intensive Public Speaking Bootcamp",
    image:"services-6.png",
    description:"A comprehensive, intensive training program covering all aspects of public speaking, from preparation to delivery.",
    price:"1000000"
}
]

---

<section id="services">
  {cards.map((card, idx) => (
    <ServicesCard 
    key=`ServicesCardID-${idx}`
    id=`ServicesCardID-${idx}`
    name={card.name}
    image={card.image}
    description={card.description}
    price={card.price}

        />
  ))}
  <img id="chalkboard-border-top" src="chalkboard-border-top.svg" alt="">
  <img id="chalkboard-border-bottom" src="chalkboard-border-bottom.svg" alt="">
  <img id="chalkboard-border-right" src="chalkboard-border-right.svg" alt="">
  <img id="chalkboard-border-left" src="chalkboard-border-left.svg" alt="">

</section>



<style>
  #services {
    position: relative;
    width: auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    background-image: url(/blackboard-bg.png);
    background-repeat: repeat;
    background-size: 30%;
  }

  #chalkboard-border-top {
    position: absolute;
    top:0;
    width: 100%;
    height: 40px;
    background-image: url(/chalkboard-border-top.svg);
  }
  #chalkboard-border-right {
    position: absolute;
    right: 0;
    width: 40px;
    height: 100%;
    background-image: url(/chalkboard-border-right.svg);
  }
  #chalkboard-border-bottom {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 40px;
    background-image: url(/chalkboard-border-bottom.svg);
  }
  #chalkboard-border-left {
    position: absolute;
    left: 0;
    width: 40px;
    height: 100%;
    background-image: url(/chalkboard-border-left.svg);
  }
</style>
