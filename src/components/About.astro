<style>
  #about-us {
    background: url("parchment-bg.png") no-repeat center center;
    background-size: cover;
    padding: 50px 0;
    color: #333; /* A dark color for contrast */
    font-family: "Josefin Sans", sans-serif;
  }

  .about-us .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }
  .main-page {
    max-width: 960px;
   margin: 0 auto;
   display: grid;
   grid-template-columns: 50% 50%;
   grid-template-rows: repeat(4, 1fr);

  }
  .about-us h2 {
    color: var(--red); /* A color that stands out against the parchment */
    text-align: center;
    background-color: var(--black);
    margin-bottom: 30px;
    font-family: "Urbanist", sans-serif;
    font-size: 4rem;
    font-weight: 800;
    border-radius: 25px;
    box-shadow: 12px 12px 0 0 white;
  }

  .about-us h3 {
    font-family: "Urbanist", sans-serif;
    color: var(--red); /* Same as the main heading for consistency */
    font-size: 2rem;
    margin-top: 20px;
    text-align: center;
    border-radius: 25px 25px 0 0;
  }
  
  .about-us p {
    background-color: var(--beige);
    padding: 15px;
    margin-bottom: 20px;
    font-size: 1.2rem;
    border-radius: 0 0 25px 25px;
    box-shadow: -12px 12px 0 0 var(--orange);
  }

  .about-illustration {
    height: 100%;
    width: 100%;
    aspect-ratio: auto;
    border-radius: 25px;
  }
  .story-section-title {
    margin: auto 0;
  }
  #about-section-cta {
    height: min-content;
    position: relative;
    display: grid;
    grid-column: 1 / 3;
    margin: 0 25%;
    justify-content: center;

  }
  
  /* Storytelling Animation */
  .story-section {
    background-color: var(--beige);
    position: relative;
    border-radius: 25px;
    margin: 1rem;
    display:flex;
    flex-direction: column;
    justify-content: space-between;
    opacity: 0;
    transform: translateY(50px);
    visibility: hidden;
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out,
      visibility 0.6s;
  }
  
  .story-section.active {
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
  }
  .about-section-cta {
    background-color: var(--beige);
    position: relative;
    border-radius: 25px;

  }
  /* Placeholder for Illustration */
  .illustration-placeholder {
    height: 150px; /* Set desired height */
    /* background-color: #eaeaea; Placeholder color */
    margin: 20px 0;
    padding: 0 .5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    font-style: italic;
    border-radius: 25px;
    /* Add more styles as needed */
  }

  /* Call to Action */
  .about-us-call-to-action {
    position: absolute;
    top: 10px;
    left: 1rem;
    right: 1rem;
    text-align: center;
    border-radius: 25px;
  }

  .cta-button {
    background-color: var(--beige); /* Adjust to match your color scheme */
    color: var(--red);
    padding: 10px 20px;
    text-transform: uppercase;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    border: none;
    border-radius: 25px;
    cursor: pointer;
  }

  .cta-button:hover {
    background-color: darkred; /* Darker shade for effect */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transform: scale(1.05);
    color: var(--beige);
  }

  /* Responsive Typography */
  @media (max-width: 768px) {
    .about-us h2 {
      font-size: 24px;
    }

    .about-us h3 {
      font-size: 20px;
    }

    .about-us p {
      font-size: 16px;
    }
  }
</style>

<script>
  window.addEventListener("scroll", revealSections);

  function revealSections() {
    var sections = document.querySelectorAll(".story-section");

    for (var i = 0; i < sections.length; i++) {
      var windowHeight = window.innerHeight;
      var elementTop = sections[i].getBoundingClientRect().top;
      var elementVisible = 7; // Amount of the element that must be visible

      if (elementTop < windowHeight - elementVisible) {
        sections[i].classList.add("active");
      } else {
        sections[i].classList.remove("active");
      }
    }
  }

  document.addEventListener("DOMContentLoaded", revealSections);
</script>
